@inject IStringLocalizer<ModuleBread> Localize
@implements IDisposable
<div>
    @LayoutService.ModuleBread
</div>
@code {
    [Inject]
    public ILayoutService LayoutService { get; set; }
    protected override void OnInitialized()
    {
        LayoutService.PropertyChanged += LayoutService_PropertyChanged;
        base.OnInitialized();
    }
    private void LayoutService_PropertyChanged(object sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        if (e.PropertyName == nameof(ILayoutService.ModuleBread))
        {
            StateHasChanged();
        }
    }
    public void Dispose()
    {
        if (LayoutService != null)
        {
            LayoutService.PropertyChanged -= LayoutService_PropertyChanged;
        }
    }
}