<MudPaper Elevation="0">
    <MudGrid Spacing="0">
        <MudItem xs="12" md="6" lg="3">
            <MudText Typo="Typo.h1">The Public Library</MudText>
            <MudText Typo="Typo.h4">Join our library</MudText>
            <MudDivider DividerType="DividerType.Middle" Class="my-6" />
            <MudButton Href="/public/library" Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowRightAlt" Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Guest</MudButton>
            <MudButton Href="/private/library" Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Api" Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Worker</MudButton>
        </MudItem>
        <MudItem xs="12" md="6" lg="3" RightToLeft="true">
            <MudImage Fluid="true" Src="./i/tech.jpg" Alt="Library" Class="d-flex align-center justify-center mud-width-full m-4" />
        </MudItem>
    </MudGrid>
</MudPaper>
