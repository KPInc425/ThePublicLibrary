@page "/counter"

@* This page is required for tests to pass *@

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3">Counter</MudText>

<MudText role="status" Typo="Typo.body1">Current count: <span id="currentCount">@currentCount</span></MudText>

<MudButton id="incrementPlus" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
