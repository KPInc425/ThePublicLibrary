<MudGrid Spacing="0">
    <MudHidden Breakpoint="Breakpoint.Xl" Invert="true">
        <MudItem xs="6" sm="6" Elevation="0">
            <MudPaper Elevation="0" Class="d-flex flex-col align-center justify-center mud-width-full mud-height-full">
                <MudStack>
                    <MudText Typo="Typo.h1">The Public Library</MudText>
                    <MudText Typo="Typo.h4">Join our library</MudText>
                    <MudDivider DividerType="DividerType.Middle" Class="my-6" />
                    <MudStack Row="true">
                        <MudButton Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowRightAlt"
                            Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Guest</MudButton>
                        <MudButton Href="/public/library" Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Api"
                            Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Worker</MudButton>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.Lg" Invert="true">
        <MudItem xs="6" sm="6" Elevation="0">
            <MudPaper Elevation="0" Class="d-flex flex-col align-center justify-center mud-width-full mud-height-full">
                <MudStack>
                    <MudText Typo="Typo.h3">The Public Library</MudText>
                    <MudText Typo="Typo.h6">Join our library</MudText>
                    <MudDivider DividerType="DividerType.Middle" Class="my-4" />
                    <MudStack Row="true">
                        <MudButton Href="/public/library" Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowRightAlt"
                            Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Guest</MudButton>
                        <MudButton Href="/private/library" Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Api"
                            Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Worker</MudButton>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.Sm" Invert="true">
        <MudItem xs="6" sm="6" Elevation="0">
            <MudPaper Elevation="0" Class="d-flex flex-col align-center justify-center mud-width-full mud-height-full">
                <MudStack>
                    <MudText Typo="Typo.h4">The Public Library</MudText>
                    <MudText Typo="Typo.subtitle1">Join our library</MudText>
                    <MudDivider DividerType="DividerType.Middle" Class="my-2" />
                    <MudStack Row="true">
                        <MudButton Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowRightAlt"
                            Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Guest</MudButton>
                        <MudButton Href="/public/library" Class="pulse" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Api"
                            Color="Color.Primary" FullWidth="false" Style="width:200px;height:50px;">Worker</MudButton>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudHidden>
    <MudItem xs="6" md="6" Elevation="0">
        <MudPaper Elevation="0" Class="d-flex align-center justify-center mud-width-full m-4">
            <MudImage Fluid="true" Src="./i/tech.jpg" Alt="Library" />
        </MudPaper>
    </MudItem>
</MudGrid>