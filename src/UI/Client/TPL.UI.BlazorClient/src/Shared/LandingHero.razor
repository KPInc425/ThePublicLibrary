    <MudHidden Breakpoint="Breakpoint.Lg" Invert="true">
        <MudItem xs="6" sm="6" Elevation="0">
            <MudPaper Elevation="0" Class="d-flex flex-col align-center justify-center mud-width-full mud-height-full">
