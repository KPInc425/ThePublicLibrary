<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">Home</MudNavLink>
    <MudNavLink Href="counter" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.LibraryBooks">Counter</MudNavLink>
    <MudNavLink Href="fetchdata" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Group">Fetch data</MudNavLink>
    <MudNavGroup Title="Controls" Expanded="false" Icon="@Icons.Material.Filled.KeyboardControlKey" HideExpandIcon="true">
        <MudNavLink Href="buttons"  Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.SmartButton">Buttons</MudNavLink>
        <MudNavLink Href="inputs"  Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Input">Inputs</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Demos" Expanded="false" Icon="@Icons.Custom.Uncategorized.ChessKing" HideExpandIcon="true">
        <MudNavLink Href="pricing" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AttachMoney">Pricing</MudNavLink>
        <MudNavLink Href="checkout" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ShoppingCartCheckout">Checkout</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
