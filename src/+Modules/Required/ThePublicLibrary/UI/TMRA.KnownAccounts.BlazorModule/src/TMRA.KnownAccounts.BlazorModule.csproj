<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsPackable>true</IsPackable>
    <PackageId>TPL.KnownAccounts.BlazorModule</PackageId>
    <Version>1.0.71.176</Version>
    <Authors>James W. Kies</Authors>
    <Company>RobotBuildersInc</Company>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <DefaultNamespace>TPL.KnownAccounts.BlazorModule</DefaultNamespace>
  </PropertyGroup>
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="12.0.0" />
    <PackageReference Include="BlazorAnimate" Version="3.0.0" />
    <PackageReference Include="Blazor.Extensions.Canvas" Version="1.1.1" />
    <PackageReference Include="Blazored.FluentValidation" Version="2.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="7.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="7.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="7.0.4" />
    <PackageReference Include="Microsoft.Extensions.Identity.Core" Version="7.0.4" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="7.0.4" />
    <PackageReference Include="System.Net.Http.Json" Version="7.0.1" />
    <PackageReference Include="MudBlazor" Version="6.2.0" />
    <PackageReference Include="TinyMCE.Blazor" Version="1.0.4" />
  </ItemGroup>
  <Choose>
    <When Condition="'$(Configuration)' == 'Release'">
      <ItemGroup>
        <PackageReference Include="TPL.UI.Common" Version="1.0.71.176" />
        <PackageReference Include="TPL.KnownAccounts.Api.Common" Version="1.0.71.176" />
        <PackageReference Include="TPL.KnownAccounts.ModuleClientService" Version="1.0.71.176" />
        <PackageReference Include="TPL.KnownAccounts.ModuleClientServiceLoader" Version="1.0.71.176" />
      </ItemGroup>
    </When>
  </Choose>
  <ItemGroup>
    <ProjectReference Include="./../../../../___TPL.UI.Common/src/TPL.UI.Common.csproj" />
    <ProjectReference Include="./../../_TPL.KnownAccounts.Api.Common/src/TPL.KnownAccounts.Api.Common.csproj" />
    <ProjectReference Include="./../../_TPL.KnownAccounts.ModuleClientService/src/TPL.KnownAccounts.ModuleClientService.csproj" />
    <ProjectReference Include="./../../_TPL.KnownAccounts.ModuleClientServiceLoader/src/TPL.KnownAccounts.ModuleClientServiceLoader.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Watch Remove="**/*.css" />
    <Watch Include="**/*.scss" />
    <Watch Include="**/*.sass" /></ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="wwwroot/**/*" />
    <Content Update="**/*.cshtml" Pack="false" />
  </ItemGroup>
  <Target Name="SassCheck" BeforeTargets="AfterBuild">
    <Exec Command="sass --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCodeSass" />
    </Exec>
    <Error Condition="'$(ErrorCodeSass)' != '0'" Text="Dart-sass is required for this project. Install globally with 'npm i -g sass' " />
  </Target>
  <Target Name="SassBuild" BeforeTargets="AfterBuild">
    <Exec Command="sass Styles:wwwroot/ --embed-source-map ./:./ Pages:Pages Shared:Shared --style compressed --load-path=Styles --update" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCodeSass" />
    </Exec>
    <Error Condition="'$(ErrorCodeSass)' != '0'" Text="Dart-sass is unhappy about something " />
  </Target>
  <Target Name="PushPackage" AfterTargets="Publish" Condition="'$(Configuration)' == 'Release'">
    <Exec Command="dotnet pack -c Release" />
    <Exec Command="dotnet nuget push &quot;$(MSBuildProjectDirectory)\bin\$(Configuration)\$(AssemblyName).$(Version).nupkg&quot; -s LocalNuggget" />
  </Target>
</Project>
