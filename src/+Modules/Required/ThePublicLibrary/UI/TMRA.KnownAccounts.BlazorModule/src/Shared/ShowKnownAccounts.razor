@inject IStringLocalizer<ShowKnownAccounts> Localize

<MudContainer>
    @foreach (var server in _knownAccounts)
    {
        <MudButton OnClick="() => SelectServerThrowEvent(server)">@server.Name</MudButton>
    }
    <ShowSignalRDetector />
</MudContainer>
@code {
    [Parameter]
    public EventCallback<KnownAccountViewModel> OnServerSelected { get; set; }
    private List<KnownAccountViewModel> _knownAccounts = new();
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        _knownAccounts = await KnownAccountsHttpClient.KnownAccountAllAsync();
    }
    protected async Task SelectServerThrowEvent(KnownAccountViewModel server)
    {
        await OnServerSelected.InvokeAsync(server);
    }
}
